<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">New Code Mapping</h1>
  <%= form_with model: @code_mapping, url: code_mappings_path, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "mt-1 pl-2 pt-1 block w-full border-gray-300 rounded-md shadow-sm", rows: 4 %>
    </div>
    <%= form.submit "Get Codes", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 cursor-pointer" %>
  <% end %>
</div>